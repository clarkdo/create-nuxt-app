{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "author": "<%= author %>",
  "private": true,
  "scripts": {
    "dev": "<% if (server === 'none') { %>nuxt<% } else { %>cross-env NODE_ENV=development nodemon server/index.js --watch server<% } %>",
    "build": "nuxt build",
    "start": "<% if (server === 'none') { %>nuxt start<% } else { %>cross-env NODE_ENV=production node server/index.js<% } %>",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "es6-promise": "^4.1.1",
    "nuxt": "^1.0.0-rc11"<% if (server === 'express') { %>,
    "express": "^4.15.3"<% } else if (server === 'koa') { %>,
    "koa": "^2.3.0"<% } %><% if (server === 'hapi') { %>,
    "hapi-nuxt": "^0.6.0"<% } %><% if (server === 'micro') { %>,
    "micro": "^9.0.0",
    "micro-route": "^2.4.0"<% } %><% if (server === 'feathers') { %>,
    "feathers": "^2.0.3",
    "feathers-configuration": "^0.3.3"<% } %><% if (server !== 'none') { %>,
    "cross-env": "^5.0.1"<% } %>
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1"<% if (server !== 'none') { %>,
    "nodemon": "^1.11.0"<% } %>
  }
}
